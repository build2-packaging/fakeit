intf_libs = # Interface dependencies.
impl_libs = # Implementation dependencies.
#import xxxx_libs += libhello%lib{hello}

lib{fakeit}: {hxx ixx txx cxx}{** -version} hxx{version} $impl_libs $intf_libs

hxx{version}: in{version} $src_root/manifest

hxx{export}@./: cxx.importable = false

# Build options.
#
cxx.poptions =+ "-I$out_root" "-I$src_root"

{hbmia obja}{*}: cxx.poptions += -DFAKEIT_STATIC_BUILD
{hbmis objs}{*}: cxx.poptions += -DFAKEIT_SHARED_BUILD

# Export options.
#
lib{fakeit}:
{
  cxx.export.poptions = "-I$out_root" "-I$src_root"
  cxx.export.libs = $intf_libs
}

liba{fakeit}: cxx.export.poptions += -DFAKEIT_STATIC
libs{fakeit}: cxx.export.poptions += -DFAKEIT_SHARED

# For pre-releases use the complete version to make sure they cannot be used
# in place of another pre-release or the final version. See the version module
# for details on the version.* variable values.
#
if $version.pre_release
  lib{fakeit}: bin.lib.version = "-$version.project_id"
else
  lib{fakeit}: bin.lib.version = "-$version.major.$version.minor"

# Install into the fakeit/ subdirectory of, say, /usr/include/
# recreating subdirectories.
#
{hxx ixx txx}{*}:
{
  install         = include/fakeit/
  install.subdirs = true
}
